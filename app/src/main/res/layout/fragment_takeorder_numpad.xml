<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_black"
            android:ems="10"
            android:gravity="end"
            android:hint="[Qty] * [Product Code]"
            android:inputType="textPersonName"
            android:paddingBottom="30dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:textSize="30sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_numpad_7"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="7"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_8"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="8"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_9"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="9"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_numpad_4"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="4"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_5"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="5"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_6"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="6"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_numpad_1"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="2"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="3"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_numpad_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="."
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_0"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="0"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_power"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="*"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_numpad_ce"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="CE"
                    android:textColor="@color/colorRed"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_bs"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="BS"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_numpad_enter"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black"
                    android:text="enter"
                    android:textColor="@color/colorTurquoise"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>